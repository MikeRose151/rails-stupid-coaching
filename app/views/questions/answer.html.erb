<h1>Stupid coaching</h1>

<div class="chat-box">
  <p>
    <%= params[:question].capitalize %>
  </p>
  <p>
    <em>-You</em>
  </p>
</div>

<div class="chat-box bg-warning p-2 text-dark bg-opacity-10">
  <p>
    <%= @answer %>
  </p>
  <p>
    <em>-Your coach</em>
  </p>
</div>

<a> <%= link_to "Ask a new question", ask_path %> </a>
